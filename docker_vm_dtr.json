{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nic_name": {
            "type": "string"
        },
        "vm_name": {
            "type": "string"
        },
        "pip_name": {
            "type": "string"
        },
        "vnet_name": {
            "type": "string"
        },
        "ssh":{
            "type": "securestring"
        },
        "storage_account_name": {
            "type": "string"
        },
        "storage_account_key": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-06-01",
            "name": "[parameters('nic_name')]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('pip_name'))]"
            ],
            "properties": {
                "provisioningState": "Succeeded",
                "resourceGuid": "c950e768-49fb-4f53-8760-c17889082689",
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "etag": "W/\"5c0788db-db51-43df-9d6e-1173c4e6e7dd\"",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "10.0.0.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('pip_name'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), 'default')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": [],
                    "appliedDnsServers": []
                },
                "macAddress": "00-0D-3A-25-8F-8C",
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-06-01",
            "name": "[parameters('pip_name')]",
            "location": "westeurope",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "provisioningState": "Succeeded",
                "resourceGuid": "ce5533ce-538b-4efe-9ce3-32b6146e777c",
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[parameters('vm_name')]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('nic_name'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "OpenLogic",
                        "offer": "CentOS",
                        "sku": "7.6",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('vm_name'), '_OsDisk_1_vmucp')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 30
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vm_name')]",
                    "adminUsername": "bravo",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/bravo/.ssh/authorized_keys",
                                    "keyData": "[parameters('ssh')]"
                                }
                            ]
                        },
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nic_name'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "[concat('script_install_docker', parameters('vm_name'))]",
                    "type": "extensions",
                    "location": "westeurope",
                    "apiVersion": "2019-03-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', parameters('vm_name'))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {},
                        "protectedSettings": {
                            "commandToExecute": "[concat('sh installDocker.sh', ' sudo sh dtr.sh ', )]",
                            "storageAccountName": "[parameters('storage_account_name')]",
                            "storageAccountKey": "[parameters('storage_account_key')]",
                            "fileUris": ["https://scriptstoragedocker.blob.core.windows.net/scripts/installDocker.sh", "https://scriptstoragedocker.blob.core.windows.net/scripts/dtr.sh"]
                        }
                    }
                }
            ]
        }
    ]
}